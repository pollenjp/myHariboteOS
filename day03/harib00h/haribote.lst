     1                                  ; haribote-os
     2                                  ; TAB=4
     3                                  
     4                                  ; BOOT_INFO関係
     5                                  CYLS    EQU     0x0ff0      ; ブートセクタが設定する
     6                                  LEDS    EQU     0x0ff1
     7                                  VMODE   EQU     0x0ff2      ; 色数に関する情報（何ビットカラーか）
     8                                  SCRNX   EQU     0x0ff4      ; 解像度X (screen x)
     9                                  SCRNY   EQU     0x0ff6      ; 解像度Y (screen y)
    10                                  VRAM    EQU     0x0ff8      ; グラフィックバッファの開始番地
    11                                  
    12                                          ORG     0xc200      ; 0xc200 <- 0x8000 + 0x4200
    13                                                              ; Where on memory this program will be loaded
    14                                  
    15 00000000 B013                            MOV     AL, 0x13    ; VGA graphics, 320x200x8bit
    16 00000002 B400                            MOV     AH, 0x00
    17 00000004 CD10                            INT     0x10
    18                                  
    19 00000006 C606F20F08                      MOV     BYTE [VMODE], 8         ; 画面モードをメモする
    20 0000000B C706F40F4001                    MOV     WORD [SCRNX], 320
    21 00000011 C706F60FC800                    MOV     WORD [SCRNY], 200
    22 00000017 66C706F80F00000A00              MOV     DWORD [VRAM], 0x000a0000
    23                                  
    24                                  ; LED state on keyboardをBIOSから教えてもらう
    25                                  
    26 00000020 B402                            MOV     AH, 0x02
    27 00000022 CD16                            INT     0x16        ; keyboard BIOS
    28 00000024 A2F10F                          MOV     [LEDS], AL
    29                                  
    30                                  fin:
    31 00000027 F4                              HLT
    32 00000028 EBFD                            JMP     fin
